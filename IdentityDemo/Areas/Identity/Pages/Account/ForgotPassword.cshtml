<h2 class ="text-center mb-3">@ViewData["Title"]</h2>
<h2 class="text-center mb-3">Enter your email.</h2>

<form id="registerForm" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

    <!-- Email -->
    <div class="mb-3">
        <label asp-for="Input.Email" class="form-label">Enter your email</label>
        <input asp-for="Input.Email" class="form-control rounded-pill" autocomplete="email" placeholder="example@gmail.com" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <!-- Submit Button -->
    <button id="registerSubmit" type="submit" class="btn btn-primary w-100 rounded-pill">Reset Passowrd</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
