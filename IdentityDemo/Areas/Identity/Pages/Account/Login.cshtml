<h3 class="text-center mb-3">Login</h3>
<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

    <!-- Email -->
    <div class="mb-3">
        <label asp-for="Input.Email" class="form-label">Enter your email</label>
        <input asp-for="Input.Email" class="form-control rounded-pill" autocomplete="email" placeholder="example@gmail.com" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <!-- Password -->
    <div class="mb-3">
        <label asp-for="Input.Password" class="form-label">Create a password</label>
        <input asp-for="Input.Password" class="form-control rounded-pill" autocomplete="new-password" placeholder="••••••••" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
        <small><a asp-page="./ForgotPassword">Forgot your password?</a></small>
    </div>
    @* <div class="text mt-3">
       
    </div> *@

    <!-- Submit Button -->
    <button id="registerSubmit" type="submit" class="btn btn-primary w-100 rounded-pill">Login</button>
</form>

<div class="text-center mt-3">
    <small>You haven't an account? <a asp-page="./Register">Register now</a></small>
</div>
