<h1 class="text-center mb-3">@ViewData["Title"]</h1>
<h2 class="text-center mb-3">Reset your password.</h2>
<form id="registerForm" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

    <!-- Email -->
    <div class="mb-3">
        <label asp-for="Input.Email" class="form-label">Enter your email</label>
        <input asp-for="Input.Email" class="form-control rounded-pill" autocomplete="email" placeholder="example@gmail.com" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <!-- Password -->
    <div class="mb-3">
        <label asp-for="Input.Password" class="form-label">Create a password</label>
        <input asp-for="Input.Password" class="form-control rounded-pill" autocomplete="new-password" placeholder="••••••••" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <!-- Password -->
    <div class="mb-3">
        <label asp-for="Input.ConfirmPassword" class="form-label">Please confirm your password</label>
        <input asp-for="Input.ConfirmPassword" class="form-control rounded-pill" autocomplete="new-password" placeholder="••••••••" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
    <!-- Submit Button -->
    <button id="registerSubmit" type="submit" class="btn btn-primary w-100 rounded-pill">Reset</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
